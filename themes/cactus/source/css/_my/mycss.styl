body {
    font-weight: 420 !important;
}

p {
    margin: 0 !important;
    font-size: 1.1em !important;
}

li {
    font-size: 1.1em !important;
}

aside {
    background-color: rgb(232,243,248);
    padding: 10px;
    padding-left: 42.5px;
    position: relative;
    margin-bottom: 16px;
    border-radius: 10px;
}

aside img {
    margin: 0;
    padding: 0;
    box-shadow: none;
    position: absolute;
    left: 10px;
    top: auto;
    width: 25px!important;
    height: 25px!important;
    background-color: rgba(255,255,255,0);
}

figcaption {
    display: none;
}

code {
    background-color: rgba(250, 210, 230, 0.959);
    border: 0px dotted #666 !important;
}
